# Flavor font

font = {
	name = "FlavorFont"

	fontstyle = {
		style = regular
		fontfiles = "AtkinsonHyperlegible-Italic" # these are inverted so italics in event descs become unitalicized
	}

	fontstyle = {
		style = bold
		fontfiles = "AtkinsonHyperlegible-MediumItalic"
	}

	fontstyle = {
		style = italic
		fontfiles = "AtkinsonHyperlegible-Regular"
	}

	fontstyle = {
		style = bold|italic
		fontfiles = "AtkinsonHyperlegible-Medium"
	}

	underlineformats = {
		default = {
			thickness = 1
			offset = 0.12
		}
	}
}
