# Each font should specify what it is used for.
# Name fonts after intented usage, not after source file names.
### Fonts used in-game ###

font = {
	name = "StandardGameFont"

	fontstyle = {
		style = regular
		fontfiles = "AtkinsonHyperlegible-Regular"
	}

	#fontstyle = {
	#	style = semibold # We should use this tag, theres no  "light" tag for styles in "textformatting.gui"
	#	fontfiles = "AtkinsonHyperlegible-Light"
	#}

	fontstyle = {
		style = bold
		fontfiles = "AtkinsonHyperlegible-Medium"
	}

	fontstyle = {
		style = italic
		fontfiles = "AtkinsonHyperlegible-Italic"
	}

	fontstyle = {
		style = bold|italic
		fontfiles = "AtkinsonHyperlegible-MediumItalic"
	}

	underlineformats = {
		default = {
			thickness = 1
			offset = 0.12
		}
	}
}

# Simple Font

font = {
	name = "SimpleFont"

	fontstyle = {
		style = regular
		fontfiles = "AtkinsonHyperlegible-Regular"
	}

